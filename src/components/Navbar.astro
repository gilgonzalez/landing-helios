---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components'

---

<nav class="bg-gray-800 text-white p-2 fixed top-0 left-1/2 transform -translate-x-1/2 w-3/4 rounded-full shadow-xl mt-2 z-50">
  <div class="flex items-center justify-between">
      <a href={'/'} class="flex-shrink-0 bg-white p-2 rounded-full">
          <Image class="h-10 w-10" src="/logo.png" alt="Helios Solar Fotovoltaica" width=100 height=100  />
      </a>
      <div class="hidden md:block flex-1">
        <div class="ml-10 flex flex-1 justify-evenly mx-8">
          <a href="experiencias" class="hover:bg-yellow-translucent opacity-0 hover:opacity-100 font-medium rounded-xl text-white flex items-center hover:shadow-illuminate transition-all duration-500">
            <Icon name="bulb" size={32}/>
            <p class="w-28 text-center">Clientes satisfechos</p>
        </a>
          <a href="trabajos" class="hover:bg-yellow-translucent font-medium rounded-xl opacity-0 hover:opacity-100 text-white flex items-center hover:shadow-illuminate transition-all duration-500">
            <Icon name="worker" size={32}/>
            <p class="w-28 text-center ">Nuestros trabajos</p>
          </a>
          <a href="instalaciones" class="hover:bg-yellow-translucent font-medium rounded-xl opacity-0 hover:opacity-100 text-white flex items-center hover:shadow-illuminate transition-all duration-500">
            <Icon name="installation" size={32} color="#eab308"/>
            <p class="w-28 text-center ">Tipos de instalaciones</p>
          </a>
          <a href="costos" class="hover:bg-yellow-translucent font-medium rounded-xl text-white opacity-0 hover:opacity-100 flex items-center hover:shadow-illuminate transition-all duration-300">
            <Icon name="money" size={32} />
            <p class="w-28 text-center ">Cálcula tus costos</p>
          </a>
          <a href="contacto" class="font-medium flex items-center gap-4 hover:animate-shake">
            <Icon name="contact" size={32} color="#047857"/>
            <p>Contáctanos</p>
          </a>
        </div>
      </div>
      <div class="block md:hidden">
        <Icon name="contact" class=""  />
      </div>
  </div>
</nav>